<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BudgetsActivity" >
    
    <TextView
        android:id="@+id/txtMonth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:text="January 2013"
        android:textColor="#333333"
        android:textSize="20dp"
        tools:context=".OverviewActivity" />
    
     <TextView
        android:id="@+id/txtNoBudgets"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtMonth"
        android:layout_marginLeft="18dp"
        android:layout_marginTop="17dp"
        android:text="No budgets created."/>

    <ListView
        android:id="@+id/budgetsList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/txtMonth"
        android:layout_marginTop="3dp"
        tools:listitem="@layout/budget_item_layout" />

</RelativeLayout>