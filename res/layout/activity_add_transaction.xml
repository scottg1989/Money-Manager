<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/FormViewMargin"
        android:paddingRight="@dimen/FormViewMargin" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:text="@string/amount" />

        <EditText
            android:id="@+id/txtValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            android:ems="10"
            android:inputType="numberDecimal" >

            <requestFocus />
        </EditText>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:text="@string/description" />

        <EditText
            android:id="@+id/txtDesc1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            android:ems="10"
            android:inputType="textCapSentences" />

        <TextView
            android:id="@+id/txtSpendingByCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:text="@string/type" />

        <Spinner
            android:id="@+id/spnType1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            tools:listitem="@android:layout/simple_spinner_dropdown_item" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:text="@string/category" />

        <Spinner
            android:id="@+id/spnCategory1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            tools:listitem="@android:layout/simple_spinner_dropdown_item" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:text="@string/category_name" />

        <EditText
            android:id="@+id/txtNewCatName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            android:ems="10"
            android:inputType="textCapSentences" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewSmallMargin"
            android:layout_marginTop="@dimen/FormViewMargin"
            android:text="@string/date" />

        <Button
            android:id="@+id/btnDate"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/FormViewMargin"
            android:layout_marginTop="@dimen/FormViewSmallMargin"
            android:text="@string/design_addtrans_date" />
    </LinearLayout>

</ScrollView>