<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.money"
    android:versionCode="9"
    android:versionName="1.6" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="sg.money.TransactionsActivity"
            android:label="@string/title_activity_transactions" >
        </activity>
        <activity
            android:name="sg.money.AddTransactionActivity"
            android:label="@string/title_activity_add_transaction"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="sg.money.SettingsActivity"
            android:label="Settings" >
        </activity>
        <activity
            android:name="sg.money.AccountsActivity"
            android:label="@string/title_activity_accounts" >
        </activity>
        <activity
            android:name="sg.money.AddAccountActivity"
            android:label="@string/title_activity_add_acount"
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="sg.money.CategoriesActivity"
            android:label="@string/title_activity_categories" >
        </activity>
        <activity
            android:name="sg.money.AddCategoryActivity"
            android:label="@string/title_activity_add_category" 
            android:windowSoftInputMode="adjustResize" >
        </activity>
        <activity
            android:name="sg.money.OverviewActivity"
            android:label="@string/title_activity_overview" >
        </activity>
        <activity
            android:name="sg.money.BudgetsActivity"
            android:label="@string/title_activity_budgets" >
        </activity>
        <activity
            android:name="sg.money.AddBudgetActivity"
            android:label="@string/title_activity_add_budget"
            android:windowSoftInputMode="adjustResize" >
        </activity>

        <receiver
            android:name="sg.money.BudgetNotificationReciever"
            android:process=":remote" >
        </receiver>

        <activity
            android:name="sg.money.PinEntryActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="adjustResize" >

            <intent-filter android:label="@string/app_name" >
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>